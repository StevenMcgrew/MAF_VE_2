                            </TextBlock>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xEC48;" Foreground="White" VerticalAlignment="Center" Margin="0,2,0,0" Width="20"/>
                                <TextBlock Name="tblkEngineSpeed" Text="Engine speed" Foreground="White" VerticalAlignment="Center" Margin="3,0,0,0" Width="160"/>
                                <TextBox Name="tboxEngineRPM" TextAlignment="Right" MaxLength="5" InputScope="Number"/>
                                <TextBlock Name="tblkRPM" Text="RPM" Foreground="White" VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE877;" Foreground="White" VerticalAlignment="Center" Margin="0,1,0,0" Width="20" />
                                <TextBlock Name="tblkMAF" Text="MAF" Foreground="White" Width="160" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <TextBox Name="tboxMAF" TextAlignment="Right" MaxLength="5" InputScope="Number"/>
                                <ComboBox Name="cboxMAF" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" Margin="4,0,0,0" SelectedIndex="0" SelectedValuePath="Content">
                                    <ComboBoxItem Content="g/s"/>
                                    <ComboBoxItem Content="kg/h"/>
                                </ComboBox>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xEA8B;" Foreground="White" VerticalAlignment="Center" Margin="0,0,0,2" Width="20"/>
                                <TextBlock Name="tblkEngineSize" Text="Engine size" Foreground="White" Width="160" VerticalAlignment="Center" Margin="3,0,0,0"/>
                                <TextBox Name="tboxEngineSize" TextAlignment="Right" MaxLength="3" InputScope="Number"/>
                                <TextBlock Name="tblkLiters" Text="L" Margin="2,0,0,0" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9CA;" Foreground="White" Width="20" VerticalAlignment="Center" Padding="5,0,0,0"/>
                                <TextBlock Name="tblkAirTemp" Text="Air temperature" Foreground="White" Width="160" VerticalAlignment="Center" Margin="3,0,0,0"/>
                                <TextBox Name="tboxTemperature" TextAlignment="Right" MaxLength="5" InputScope="Number"/>
                                <ComboBox Name="cboxTemp" SelectedValuePath="Content" Margin="4,0,0,0" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" SelectedIndex="0">
                                    <ComboBoxItem Content="&#186;F"/>
                                    <ComboBoxItem Content="&#186;C"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE909;" Foreground="White" Width="20" VerticalAlignment="Center"/>
                                <TextBlock Name="tblkAltitude" Text="Elevation" Foreground="White" Width="160" Margin="3,0,0,0" VerticalAlignment="Center"/>
                                <TextBox Name="tboxAltitude" TextAlignment="Right" MaxLength="5" InputScope="Number"/>
                                <ComboBox Name="cboxAltitude" SelectedValuePath="Content" Margin="4,0,0,0" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" SelectedIndex="0">
                                    <ComboBoxItem Content="ft"/>
                                    <ComboBoxItem Content="m"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Name="btnCalculate" Background="#FF3399FF" Margin="134,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Calculate"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE8EF;" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="btnClear" Background="#FF3399FF" Margin="4,0,0,0">
