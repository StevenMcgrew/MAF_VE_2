                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Name="tblkMAFDifference" Text="MAF Difference" Foreground="White" Width="215" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                <TextBox Name="tboxDifference" TextAlignment="Right" IsReadOnly="True"/>
                                <TextBlock Name="tblkDiffPercentSign" Text="%" Margin="3,0,0,0" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Name="tblkVE" Text="Volumetric Efficiency" Foreground="White" Width="215" Margin="10,0,0,0" VerticalAlignment="Center"/>
