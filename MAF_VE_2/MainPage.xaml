            <PivotItem Name="pivotItem_Search">
                <Grid Name="grid_ForSearchPivotItem" Background="#FFBF5050"/>
            </PivotItem>
            <PivotItem Name="pivotItem_Results">
                <Grid Name="grid_ForResultsPivotItem"/>
            </PivotItem>
        </Pivot>

        <StackPanel VerticalAlignment="Top" Background="#FF191818">
            <Button Name="btn_Menu" HorizontalContentAlignment="Left" Width="100" Foreground="White" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE700;" VerticalAlignment="Center"/>
                    <TextBlock Text="Menu" Margin="2,0,0,0"/>
                </StackPanel>
                <Button.Flyout>
                    <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource styleMenuFlyout}">
                        <MenuFlyoutItem Name="menuOpen" Text="Open                        Ctrl+ O" />
                        <MenuFlyoutItem Name="menuSave" Text="Save                          Ctrl+ S" />
                        <MenuFlyoutItem Name="menuInstructions" Text="Help and How to..." />
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuPrint" Text="Print                          Ctrl+ P" />
                        <MenuFlyoutItem Name="menuShare" Text="Share" />
                    </MenuFlyout>
                </Button.Flyout>
