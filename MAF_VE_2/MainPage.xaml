<Page
    x:Class="MAF_VE_2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MAF_VE_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Name="page_Main" SizeChanged="Page_SizeChanged">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF1E1E1E">
            <Button Background="#FF1E1E1E" HorizontalContentAlignment="Left" Width="100" Foreground="White" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE700;" VerticalAlignment="Center"/>
                    <TextBlock Text="Menu" Margin="2,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <SplitView Name="splitView_Main" Grid.Row="1" DisplayMode="CompactInline" OpenPaneLength="100" CompactPaneLength="4" Background="#FF2D2D30">
            <SplitView.Pane>
                <StackPanel Background="#FF1E1E1E" Padding="0,20,0,0">

                    <Button Name="btnOpen" Background="#FF1E1E1E" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Foreground="White" Click="btnOpen_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE8E5;" VerticalAlignment="Center"/>
                            <TextBlock Text="Open" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="btnSave" Background="#FF1E1E1E" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE74E;" VerticalAlignment="Center"/>
                            <TextBlock Text="Save" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="btnInstructions" Background="#FF1E1E1E" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE897;" VerticalAlignment="Center"/>
                            <TextBlock Text="Help" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </SplitView.Pane>

            <Pivot Name="pivot_Main">
                <PivotItem Name="pivotItem_Calculator">
                    <Grid Name="grid_ForMainPivotItem">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="20">

                            <TextBlock FontWeight="Bold" FontSize="20" Foreground="#FF3399FF">
                                    <Underline>
                                        <Run Text="Inputs"/>
                                    </Underline>
                                    <Run Text=":"/>
                            </TextBlock>

                            <RelativePanel>
                                <TextBlock Name="tblkEngineSpeed" Text="Engine speed" Margin="41,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxEngineRPM" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="27,0,0,5" MaxLength="5" RelativePanel.RightOf="tblkEngineSpeed" InputScope="Number"/>
                                <TextBlock Name="tblkRPM" Text="RPM" RelativePanel.RightOf="tboxEngineRPM" Margin="2,0,0,0" Foreground="White" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xEC48;" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White" Margin="20,2,0,0"/>
                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkMAF" Text="MAF" Margin="41,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxMAF" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="27,0,0,5" MaxLength="5" RelativePanel.RightOf="tblkMAF" InputScope="Number"/>
                                <ComboBox Name="cboxMAF" RelativePanel.RightOf="tboxMAF" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" Margin="2,0,0,0" SelectedIndex="0" SelectedValuePath="Content">
                                    <ComboBoxItem Content="g/s"/>
                                    <ComboBoxItem Content="kg/h"/>
                                </ComboBox>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE877;" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White" Margin="20,4,0,0"/>
                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkEngineSize" Text="Engine size" Margin="41,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxEngineSize" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="27,0,0,5" MaxLength="3" RelativePanel.RightOf="tblkEngineSize" InputScope="Number"/>
                                <TextBlock Name="tblkLiters" Text="L" RelativePanel.RightOf="tboxEngineSize" Margin="2,0,0,0" Foreground="White" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xEA8B;" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White" Margin="19,0,0,5"/>

                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkAirTemp" Text="Air temperature" Margin="41,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxTemperature" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="27,0,0,5" MaxLength="5" RelativePanel.RightOf="tblkAirTemp" InputScope="Number"/>
                                <ComboBox Name="cboxTemp" SelectedValuePath="Content" RelativePanel.RightOf="tboxTemperature" Margin="2,0,0,0" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" SelectedIndex="0">
                                    <ComboBoxItem Content="&#186;F"/>
                                    <ComboBoxItem Content="&#186;C"/>
                                </ComboBox>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9CA;" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White" Margin="24,2,0,0"/>
                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkAltitude" Text="Elevation" Margin="41,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxAltitude" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="27,0,0,10" MaxLength="5" RelativePanel.RightOf="tblkAltitude" InputScope="Number"/>
                                <ComboBox Name="cboxAltitude" SelectedValuePath="Content" RelativePanel.RightOf="tboxAltitude" Margin="2,0,0,0" Background="White" BorderBrush="#FF7A7A7A" Foreground="Black" SelectedIndex="0">
                                    <ComboBoxItem Content="ft"/>
                                    <ComboBoxItem Content="m"/>
                                </ComboBox>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE909;" RelativePanel.AlignVerticalCenterWithPanel="True" Foreground="White" Margin="20,0,0,0"/>
                            </RelativePanel>

                            <RelativePanel>
                                <Button Name="btnCalculate" Margin="150,0,0,20" Background="#FF3399FF">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Calculate"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE8EF;" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="btnClear" Background="#FF3399FF" RelativePanel.RightOf="btnCalculate" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Clear"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="  &#xE894;" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </RelativePanel>

                            <TextBlock FontWeight="Bold" FontSize="20" Foreground="#FF3399FF">
                                    <Underline>
                                        <Run Text="Outputs"/>
                                    </Underline>
                                    <Run Text=":"/>
                            </TextBlock>

                            <RelativePanel>
                                <TextBlock Name="tblkExpectedMAF" Text="Expected MAF" Margin="20,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxExpectedMAF" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="48,0,0,5" IsReadOnly="True" RelativePanel.RightOf="tblkExpectedMAF"/>
                                <TextBlock Text="g/s" RelativePanel.RightOf="tboxExpectedMAF" Margin="2,0,0,0" Foreground="White" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkMAFDifference" Text="MAF Difference" Margin="20,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxDifference" RelativePanel.AlignVerticalCenterWithPanel="True" TextAlignment="Right" Margin="48,0,0,5" IsReadOnly="True" RelativePanel.RightOf="tblkMAFDifference"/>
                                <TextBlock Name="tblkDiffPercentSign" Text="%" RelativePanel.RightOf="tboxDifference" Margin="2,0,0,0" Foreground="White" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            </RelativePanel>

                            <RelativePanel>
                                <TextBlock Name="tblkVE" Text="Volumetric Efficiency" Margin="20,0,0,0" Foreground="White" Width="140" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                                <TextBox Name="tboxVE" TextAlignment="Right" Margin="48,0,0,0" IsReadOnly="True" RelativePanel.RightOf="tblkVE"/>
                                <TextBlock Name="tblkVePercentSign" Text="%" RelativePanel.RightOf="tboxVE" Margin="2,0,0,0" Foreground="White" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                            </RelativePanel>

                        </StackPanel>

                        <StackPanel Name="sPanel_Search" Grid.Column="1" Margin="20">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <Button Name="btnCloseRecordsView2" Content="Back" Background="#FF3399FF" Margin="12,10,10,10" Click="btnCloseRecordsView2_Click"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Year" VerticalAlignment="Center" Margin="5,0,0,0" Width="45"/>
                                        <ComboBox Name="cboxYear2" Margin="5" PlaceholderText="Select">
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Make" VerticalAlignment="Center" Margin="5,0,0,0" Width="45"/>
                                        <ComboBox Name="cboxMake2" Margin="5,0,5,5" PlaceholderText="Select">
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Model" VerticalAlignment="Center" Margin="5,0,0,0" Width="45"/>
                                        <TextBox Name="tboxModel2" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Engine" VerticalAlignment="Center" Margin="5,0,0,0" Width="45"/>
                                        <ComboBox Name="cboxEngine2" Margin="5" PlaceholderText="Select">
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel>
                                    <RadioButton GroupName="rbGroup2" Name="rbGood2" Content="Good" Margin="20,50,0,0" MinWidth="120" Foreground="Lime" />
                                    <RadioButton GroupName="rbGroup2" Name="rbBad2" Content="Bad" Margin="20,0,0,0" Foreground="Red" />
                                    <RadioButton GroupName="rbGroup2" Name="rbUnsure2" Content="Unsure" Margin="20,0,0,0" Foreground="Yellow" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button Name="btnSearch" Background="#FF3399FF" Margin="12,10,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Search"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=" &#xE11A;" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Name="btnReset" Content="Reset" Background="#FF3399FF" Margin="12,10,0,0"/>
                                <!--<Button Name="btnDeleteAll" Content="Delete All" Background="#FF3399FF" Margin="12,10,0,0" Click="btnDeleteAll_Click" />-->
                            </StackPanel>

                            <ListBox Margin="2,10,2,0" Background="#FFC2C3C9" BorderBrush="Black" BorderThickness="0,0,0,1">
                                <Grid Width="320">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="42" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="90" />
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Year" HorizontalAlignment="Left" FontWeight="Bold" />
                                    <TextBlock Grid.Column="1" Text="Make" HorizontalAlignment="Left" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="2" Text="Model" HorizontalAlignment="Left" FontWeight="Bold" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="3" Text="Eng." HorizontalAlignment="Left" FontWeight="Bold" />
                                    <TextBlock Grid.Column="4" Text="Cond." HorizontalAlignment="Left" FontWeight="Bold" />
                                </Grid>
                            </ListBox>

                            <TextBlock Name="tblkNoResults" Text="No results found..." Foreground="White" Margin="10,5,5,5" Visibility="Collapsed"/>

                            <ListView Name="lboxData" Margin="2,0,2,2" Background="White" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="320" IsItemClickEnabled="True" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Name="gridForData" Width="300">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="42" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="90" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Path=Year}" HorizontalAlignment="Left" />
                                            <TextBlock Grid.Column="1" Text="{Binding Path=Make}" HorizontalAlignment="Left" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Text="{Binding Path=Model}" HorizontalAlignment="Left" Width="85" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="3" Text="{Binding Path=Engine}" HorizontalAlignment="Left" />
                                            <TextBlock Grid.Column="4" Text="{Binding Path=Condition}" HorizontalAlignment="Left" Name="tblkListCondition" />

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>

                    </Grid>
                </PivotItem>

                <PivotItem Name="pivotItem_Search">
                    <Grid Name="grid_ForSearchPivotItem" Background="#FFBF5050"/>
                </PivotItem>
                <PivotItem Name="pivotItem_Results">
                    <Grid Name="grid_ForResultsPivotItem"/>
                </PivotItem>
            </Pivot>
            
        </SplitView>
    </Grid>
</Page>
